<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Order number</th>
      <th>Despatch date</th>
      <th>Status</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer %></td>
        <td><%= order.order_number %></td>
        <td><%= order.despatch_date %></td>
        <td><%= order.status %></td>
        <td><%= order.comments %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Previous status', prev_status_path(order) %></td>
        <td><%= link_to 'Next status', next_status_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

