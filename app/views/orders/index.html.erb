<h1>Orders</h1>
<div class="table-responsive">
<table class="table table-striped table-bordered table">
  <thead class="thead-invers">
    <tr>
      <th>Customer</th>
      <th>Order number</th>
      <th>Despatch date</th>
      <th>Status</th>
      <th>Article description</th>
      <th>Carrier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer %></td>
        <td><%= order.order_number %></td>
        <td><%= order.despatch_date %></td>
        <td><%= order.status %></td>

        <% order.items.each do |item| %>
        <td><%= item.article_description %></td>
        <% end %>

        <% order.shippings.each do |shipping| %>
        <td><%= shipping.carrier %></td>
        <% end %>

        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Previous status', prev_status_path(order) %></td>
        <td><%= link_to 'Next status', next_status_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Order', new_order_path %>
