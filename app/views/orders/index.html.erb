<h1>Orders</h1>
<div class="table-responsive">
<table class="table table-striped table-bordered table">
  <thead class="thead-invers">
    <tr>
      <th>Customer</th>
      <th>Order number</th>
      <th>Despatch date</th>
      <th>Status</th>
      <th>Comments</th>
      <th>Article number</th>
      <th>Article description</th>
      <th>Quantity</th>
      <th>Item comments</th>
      <th>HR PDF</th>
      <th>Carrier</th>
      <th>Shipping date</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer %></td>
        <td><%= order.order_number %></td>
        <td><%= order.despatch_date %></td>
        <td><%= order.status %></td>
        <td><%= order.comments %></td>

        <% order.items.each do |item| %>
        <td><%= item.article_number %></td>
        <td><%= item.article_description %></td>
        <td><%= item.quantity %></td>
        <td><%= item.item_comments %></td>
        <td><a href = <%= item.hrpdf_url %>> Download PDF</a></td>
        <% end %>

        <% order.shippings.each do |shipping| %>
        <td><%= shipping.carrier %></td>
        <td><%= shipping.shipping_date %></td>
        <% end %>

        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Previous status', prev_status_path(order) %></td>
        <td><%= link_to 'Next status', next_status_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Order', new_order_path %>
